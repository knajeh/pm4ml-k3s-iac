apiVersion: cert-manager.io/v1alpha2
kind: Certificate
metadata:
  name: mojaloop-connector-tls
  namespace: {{ item.key }}
spec:
  secretName: mojaloop-connector-tls
  duration: 2160h # 90d
  renewBefore: 360h # 15d
  keySize: 2048
  keyAlgorithm: rsa
  keyEncoding: pkcs1
  usages:
    - digital signature
    - key encipherment
    - client auth
  dnsNames: 
  - connector.{{ item.key }}.{{ item.value.pm4ml_subdomain }}
  issuerRef:
    name: vault-issuer-{{ item.key }}
    kind: ClusterIssuer
    group: cert-manager.io
