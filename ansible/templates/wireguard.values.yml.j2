ingress:
  enabled: true
  hosts: [{{ vpn_endpoint }}]
  annotations:
    external-dns.alpha.kubernetes.io/target: {{ ingress_external_hostname }}
    kubernetes.io/ingress.class: {{ ext_ingress_classname }}
    cert-manager.io/cluster-issuer: letsencrypt
  tls:
    - hosts: [{{ vpn_endpoint }}]
      secretName: wg-tls
      
config:
  externalHost: {{ vpn_endpoint }}
  vpn:
    cidr: 192.168.100.0/24
    allowedIPs: [{{ vpc_cidr_var }}]

wireguard:
  config:
    privateKey: {{lookup('file', '../../wireguard.private.key') }}
  service:
    type: LoadBalancer
    
persistence:
  enabled: true
  storageClass: {{ storage_class_name }}

nodeSelector:
  "node-role.kubernetes.io/master": "true"

tolerations:
  - key: "CriticalAddonsOnly"
    operator: "Equal"
    value: "true"
    effect: "NoExecute"